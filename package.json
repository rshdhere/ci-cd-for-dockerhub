{
  "name": "deploying-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd packages/db && bunx prisma generate && cd ../..",
    "db:migrate": "cd packages/db && bunx prisma migrate deploy && cd ../..",
    "start:web": "cd apps/web && bun run start",
    "start:http-backend": "cd apps/http-backend && bun run start",
    "start:ws-backend": "cd apps/ws-backend && bun run start",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
